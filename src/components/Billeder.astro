---
const text = Astro.props.text;
const img = Astro.props.img;
const alttext = Astro.props.alttext;
---

<div class="billede_container">
  <img src={img} alt="{alttext}" />
  <p><i>{text}</i></p>
</div>

<style>
  .billede_container {
    width: 100%;
    height: 60%;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 30px;
  }
</style>
